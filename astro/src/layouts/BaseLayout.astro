---
import Sidebar from "../components/Sidebar.astro"
import routes from "../routes.json"

const { title } = Astro.props
const fullTitle =
  title
  ? `Sink's place - ${title}`
  : "Sink's place"
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="theme-color" content="#000000" />
    <link rel="shortcut icon" type="image/ico" href="/src/assets/favicon.ico" />
    <title>{fullTitle}</title>
    <link
      href="https://fonts.googleapis.com/css2?family=Lato:ital@0;1&family=Roboto+Mono:wght@100;300&display=swap"
      rel="stylesheet"
    />
    <link rel="stylesheet" href={Astro.resolve("../styles.sass")} />
  </head>
  <body id="root">
    <!-- i have to client:load this component for it to be allowed to client:load the theme toggler, which is very annoying -_- -->
    <Sidebar routes={routes} currentPath={Astro.request.canonicalURL.pathname} client:load />
    <div id="content">
    <slot />
    </div>

    <style id="temp_dark">
      @media (prefers-color-scheme: dark) {
        #root,
        img {
          filter: invert();
        }
        * {
          transition-duration: 0ms !important;
        }
      }
    </style>

    <script client:only>
      window.prefersDark = !!window.matchMedia("(prefers-color-scheme: dark)")
        .matches;

      if (
        document.cookie == "dark" ||
        (document.cookie != "light" && window.prefersDark)
      )
        document.getElementById("root").className = "dark";

      document.getElementById("temp_dark").remove();
    </script>
  </body>
</html>