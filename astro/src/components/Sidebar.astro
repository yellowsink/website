---
import ThemeToggler from "./ThemeToggler.astro";
const { routes, currentPath } = Astro.props;
const fixedPath = currentPath.length > 1 && currentPath.endsWith("/") ? currentPath.slice(0, -1) : currentPath;
---

<div id="sidebar">
  <ThemeToggler client:idle />

  <h1>sink's place</h1>
  <h2>Pages:</h2>
  <ul>
    {routes.map((route) => (
      <li>
        <a
          class={route.path === fixedPath ? "active" : ""}
          href={route.path}
        >
          {route.name}
        </a>
      </li>
    ))}
  </ul>

  <div style="flex: 1" />

  <p id="sbar_bottomtext">Built with Astro and VSCode</p>
</div>