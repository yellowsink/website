---
import AccountCard from "../components/AccountCard.astro";
import BaseLayout from "../layouts/BaseLayout.astro";
import accounts from "../accounts.json";
---

<BaseLayout title="Accounts">
  <h2>Accounts</h2>
  <div class="">
    {accounts.map((acc) => (
      <AccountCard
        banner={acc.banner}
        label={acc.label}
        link={acc.link}
        uname={acc.uname}
      />
    ))}
  </div>
</BaseLayout>

<style lang="sass">
  div
    display: flex
    flex-wrap: wrap
    justify-content: space-evenly
    gap: 1.5rem
    margin-top: 1rem
    margin-bottom: 1rem

    @media (max-width: 768px)
      flex-direction: column
</style>
